@model IEnumerable<Proiect_ASPDOTNET.Models.Entities.User>

@{
    ViewData["Title"] = "Utilizatori";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-users me-2"></i>Utilizatori</h2>
        <p class="text-muted mb-0">Gestionare utilizatori sistem</p>
    </div>
    <a href="/User/Create" class="btn btn-primary">
        <i class="fas fa-user-plus me-2"></i>Adauga Utilizator
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID Utilizator</th>
                            <th>Nume Complet</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Companie</th>
                            <th>Depozit</th>
                            <th>Status</th>
                            <th>Actiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td><code>@user.UserId</code></td>
                                <td><strong>@user.NumeComplet</strong></td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.Rol == Proiect_ASPDOTNET.Models.Entities.UserRole.SuperAdmin)
                                    {
                                        <span class="badge bg-danger">SuperAdmin</span>
                                    }
                                    else if (user.Rol == Proiect_ASPDOTNET.Models.Entities.UserRole.DirectorCompanie)
                                    {
                                        <span class="badge bg-primary">Director Companie</span>
                                    }
                                    else if (user.Rol == Proiect_ASPDOTNET.Models.Entities.UserRole.ResponsabilDepozit)
                                    {
                                        <span class="badge bg-info">Responsabil Depozit</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Muncitor</span>
                                    }
                                </td>
                                <td>@(user.Companie?.Nume ?? "-")</td>
                                <td>@(user.Depozit?.Nume ?? "-")</td>
                                <td>
                                    @if (user.Activ)
                                    {
                                        <span class="badge bg-success">Activ</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactiv</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/User/Details/@user.Id" class="btn btn-sm btn-outline-info" title="Detalii">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/User/Edit/@user.Id" class="btn btn-sm btn-outline-warning" title="Editeaza">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-4x text-muted mb-3"></i>
                <h5>Nu exista utilizatori</h5>
                <p class="text-muted">Adauga primul utilizator pentru a incepe.</p>
                <a href="/User/Create" class="btn btn-primary">
                    <i class="fas fa-user-plus me-2"></i>Adauga Utilizator
                </a>
            </div>
        }
    </div>
</div>