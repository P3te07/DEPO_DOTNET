@model IEnumerable<Proiect_ASPDOTNET.Models.Entities.LogActivitate>

@{
    ViewData["Title"] = "Raport Activitate";
}

<div class="mb-4">
    <h2><i class="fas fa-history me-2"></i>Raport Activitate Utilizatori</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Rapoarte">Rapoarte</a></li>
            <li class="breadcrumb-item active">Activitate</li>
        </ol>
    </nav>
</div>

<!-- Filters -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Data Start</label>
                <input type="date" name="dataStart" class="form-control" value="@ViewBag.DataStart?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-3">
                <label class="form-label">Data End</label>
                <input type="date" name="dataEnd" class="form-control" value="@ViewBag.DataEnd?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-3">
                <label class="form-label">Utilizator</label>
                <select name="userId" class="form-select">
                    <option value="">Toti Utilizatorii</option>
                    <!-- Aici se pot adauga utilizatorii dinamic -->
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter me-2"></i>Filtreaza
                    </button>
                    <a href="/Rapoarte/Activitate" class="btn btn-secondary">
                        <i class="fas fa-redo me-2"></i>Reseteaza
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h6 class="card-title">Total Actiuni</h6>
                <h2 class="mb-0">@Model.Count()</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h6 class="card-title">Utilizatori Activi</h6>
                <h2 class="mb-0">@Model.Select(l => l.UserId).Distinct().Count()</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h6 class="card-title">Perioada</h6>
                <h2 class="mb-0 small">@ViewBag.DataStart?.ToString("dd.MM") - @ViewBag.DataEnd?.ToString("dd.MM")</h2>
            </div>
        </div>
    </div>
</div>

<!-- Activity Log -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-list me-2"></i>Log Activitate (ultimele 500 actiuni)
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead>
                        <tr>
                            <th>Data/Ora</th>
                            <th>Utilizator</th>
                            <th>Actiune</th>
                            <th>Detalii</th>
                            <th>Depozit</th>
                            <th>IP</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td><small>@log.DataOra.ToString("dd.MM.yyyy HH:mm:ss")</small></td>
                                <td>
                                    <strong>@log.User.NumeComplet</strong>
                                    <br><small class="text-muted">@log.User.Rol</small>
                                </td>
                                <td>
                                    @if (log.Actiune.Contains("Login"))
                                    {
                                        <span class="badge bg-success">@log.Actiune</span>
                                    }
                                    else if (log.Actiune.Contains("Logout"))
                                    {
                                        <span class="badge bg-secondary">@log.Actiune</span>
                                    }
                                    else if (log.Actiune.Contains("Creare") || log.Actiune.Contains("Adaugare"))
                                    {
                                        <span class="badge bg-primary">@log.Actiune</span>
                                    }
                                    else if (log.Actiune.Contains("Editare"))
                                    {
                                        <span class="badge bg-warning">@log.Actiune</span>
                                    }
                                    else if (log.Actiune.Contains("Stergere"))
                                    {
                                        <span class="badge bg-danger">@log.Actiune</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@log.Actiune</span>
                                    }
                                </td>
                                <td><small>@log.Detalii</small></td>
                                <td>@(log.Depozit?.Nume ?? "-")</td>
                                <td><small><code>@log.AdresaIP</code></small></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted text-center py-4 mb-0">Nu exista activitati inregistrate in perioada selectata.</p>
        }
    </div>
</div>

<!-- Activity Summary by User -->
@if (Model.Any())
{
    <div class="card mt-4">
        <div class="card-header">
            <i class="fas fa-user-chart me-2"></i>Rezumat Activitate pe Utilizator
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Utilizator</th>
                            <th>Rol</th>
                            <th>Total Actiuni</th>
                            <th>Ultima Activitate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userGroup in Model.GroupBy(l => l.User))
                        {
                            <tr>
                                <td><strong>@userGroup.Key.NumeComplet</strong></td>
                                <td>@userGroup.Key.Rol</td>
                                <td><span class="badge bg-primary">@userGroup.Count()</span></td>
                                <td>@userGroup.Max(l => l.DataOra).ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}