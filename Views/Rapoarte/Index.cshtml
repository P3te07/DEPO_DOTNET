@{
    ViewData["Title"] = "Rapoarte";
}

<div class="mb-4">
    <h2><i class="fas fa-chart-bar me-2"></i>Rapoarte si Statistici</h2>
    <p class="text-muted">Generare rapoarte pentru analiza datelor</p>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-boxes fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Raport Inventar</h5>
                <p class="card-text">Vizualizare completa a inventarului din depozite cu valori totale.</p>
                <a href="/Rapoarte/Inventar" class="btn btn-primary">
                    <i class="fas fa-file-alt me-2"></i>Genereaza Raport
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-exchange-alt fa-3x text-success mb-3"></i>
                <h5 class="card-title">Raport Tranzactii</h5>
                <p class="card-text">Istoric detaliat al tuturor tranzactiilor cu filtre pe perioade.</p>
                <a href="/Rapoarte/Tranzactii" class="btn btn-success">
                    <i class="fas fa-file-alt me-2"></i>Genereaza Raport
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-history fa-3x text-info mb-3"></i>
                <h5 class="card-title">Raport Activitate</h5>
                <p class="card-text">Log complet al activitatilor utilizatorilor din sistem.</p>
                <a href="/Rapoarte/Activitate" class="btn btn-info">
                    <i class="fas fa-file-alt me-2"></i>Genereaza Raport
                </a>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-info-circle me-2"></i>Informatii Rapoarte
    </div>
    <div class="card-body">
        <h6>Caracteristici Rapoarte:</h6>
        <ul>
            <li>Exportare in format PDF sau Excel</li>
            <li>Filtrare pe perioada, depozit sau utilizator</li>
            <li>Grafice si statistici vizuale</li>
            <li>Actualizare in timp real</li>
        </ul>
    </div>
</div>