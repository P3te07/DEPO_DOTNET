@model IEnumerable<Proiect_ASPDOTNET.Models.Entities.Depozit>

@{
    ViewData["Title"] = "Depozite";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-warehouse me-2"></i>Depozite</h2>
        <p class="text-muted mb-0">Gestionare depozite</p>
    </div>
    <a href="/Depozit/Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Adauga Depozit
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID Depozit</th>
                            <th>Nume</th>
                            <th>Companie</th>
                            <th>Adresa</th>
                            <th>Capacitate</th>
                            <th>Status</th>
                            <th>Actiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var depozit in Model)
                        {
                            <tr>
                                <td><code>@depozit.DepozitId</code></td>
                                <td><strong>@depozit.Nume</strong></td>
                                <td>@depozit.Companie?.Nume</td>
                                <td>@depozit.Adresa</td>
                                <td>@depozit.CapacitateMaxima m³</td>
                                <td>
                                    @if (depozit.Active)
                                    {
                                        <span class="badge bg-success">Activ</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactiv</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/Depozit/Details/@depozit.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/Depozit/Edit/@depozit.Id" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-warehouse fa-4x text-muted mb-3"></i>
                <h5>Nu exista depozite inregistrate</h5>
                <p class="text-muted">Adauga primul depozit pentru a incepe.</p>
                <a href="/Depozit/Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Adauga Depozit
                </a>
            </div>
        }
    </div>
</div>