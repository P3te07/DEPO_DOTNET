@model Proiect_ASPDOTNET.Models.ViewModels.DepozitViewModel

@{
    ViewData["Title"] = "Adauga Depozit";
}

<div class="mb-4">
    <h2><i class="fas fa-plus-circle me-2"></i>Adauga Depozit Nou</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Depozit">Depozite</a></li>
            <li class="breadcrumb-item active">Adauga Depozit</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-info-circle me-2"></i>Informatii Depozit
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="CompanieId" class="form-label"></label>
                        <select asp-for="CompanieId" class="form-select" asp-items="ViewBag.Companii">
                            <option value="">Selecteaza compania...</option>
                        </select>
                        <span asp-validation-for="CompanieId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nume" class="form-label"></label>
                        <input asp-for="Nume" class="form-control" placeholder="Ex: Depozit Central" />
                        <span asp-validation-for="Nume" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Adresa" class="form-label"></label>
                        <input asp-for="Adresa" class="form-control" placeholder="Str. Exemplu nr. 10, Bucuresti" />
                        <span asp-validation-for="Adresa" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Latitudine" class="form-label"></label>
                            <input asp-for="Latitudine" class="form-control" placeholder="44.4268" step="0.000001" />
                            <span asp-validation-for="Latitudine" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Longitudine" class="form-label"></label>
                            <input asp-for="Longitudine" class="form-control" placeholder="26.1025" step="0.000001" />
                            <span asp-validation-for="Longitudine" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="CapacitateMaxima" class="form-label"></label>
                            <input asp-for="CapacitateMaxima" class="form-control" placeholder="10000" />
                            <span asp-validation-for="CapacitateMaxima" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Depozit" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Inapoi
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Salveaza Depozit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-info-circle me-2"></i>Informatii</h5>
                <p class="small mb-2"><strong>Coordonate GPS:</strong></p>
                <p class="small mb-2">Foloseste <a href="https://www.google.com/maps" target="_blank">Google Maps</a> pentru a obtine coordonatele exacte.</p>
                <hr>
                <p class="small text-muted mb-0">
                    <i class="fas fa-lightbulb me-2"></i>
                    Capacitatea maxima se masoara in metri cubi (m³).
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}