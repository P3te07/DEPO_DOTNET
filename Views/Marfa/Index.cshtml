@model IEnumerable<Proiect_ASPDOTNET.Models.Entities.Marfa>

@{
    ViewData["Title"] = "Inventar Marfuri";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-boxes me-2"></i>Inventar Marfuri</h2>
        <p class="text-muted mb-0">Gestionare inventar</p>
    </div>
    <a href="/Marfa/Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Adauga Marfa
    </a>
</div>

<!-- Filter Section -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="search" class="form-control" placeholder="Cauta dupa nume sau SKU..." value="@ViewBag.Search">
            </div>
            <div class="col-md-3">
                <select name="zona" class="form-select">
                    <option value="">Toate Zonele</option>
                    <option value="A">Zona A</option>
                    <option value="B">Zona B</option>
                    <option value="C">Zona C</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Cauta
                </button>
                <a href="/Marfa" class="btn btn-secondary">
                    <i class="fas fa-redo me-2"></i>Reseteaza
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>Nume</th>
                            <th>Depozit</th>
                            <th>Cantitate</th>
                            <th>Localizare</th>
                            <th>Pret Unitar</th>
                            <th>Valoare Totala</th>
                            <th>Actiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var marfa in Model)
                        {
                            <tr>
                                <td><code>@marfa.SKU</code></td>
                                <td>
                                    <strong>@marfa.Name</strong>
                                    @if (!string.IsNullOrEmpty(marfa.Descriere))
                                    {
                                        <br>
                            
                                        <small class="text-muted">@marfa.Descriere</small>
                                    }
                                </td>
                                <td>@marfa.Depozit?.Nume</td>
                                <td>
                                    <span class="badge bg-info">
                                        @marfa.CapacitateCurenta @marfa.UnitateMasura
                                    </span>
                                </td>
                                <td>
                                    <small>
                                        Zona <strong>@marfa.Zona</strong>,
                                        Etaj <strong>@marfa.Etaj</strong>,
                                        Raft <strong>@marfa.Raft</strong>-<strong>@marfa.Pozitie</strong>
                                    </small>
                                </td>
                                <td>@marfa.PretUnitar.ToString("N2") RON</td>
                                <td>
                                    <strong>@((marfa.CapacitateCurenta * marfa.PretUnitar).ToString("N2")) RON</strong>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/Marfa/Details/@marfa.Id" class="btn btn-sm btn-outline-info" title="Detalii">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/Marfa/Edit/@marfa.Id" class="btn btn-sm btn-outline-warning" title="Editeaza">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-active">
                            <td colspan="6" class="text-end"><strong>TOTAL VALOARE:</strong></td>
                            <td colspan="2">
                                <strong>@Model.Sum(m => m.CapacitateCurenta * m.PretUnitar).ToString("N2") RON</strong>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-boxes fa-4x text-muted mb-3"></i>
                <h5>Nu exista marfuri in inventar</h5>
                <p class="text-muted">Adauga prima marfa pentru a incepe.</p>
                <a href="/Marfa/Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Adauga Marfa
                </a>
            </div>
        }
    </div>
</div>