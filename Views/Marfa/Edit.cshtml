@model Proiect_ASPDOTNET.Models.ViewModels.MarfaViewModel

@{
    ViewData["Title"] = "Editeaza Marfa";
}

<div class="mb-4">
    <h2><i class="fas fa-edit me-2"></i>Editeaza Marfa</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Marfa">Inventar</a></li>
            <li class="breadcrumb-item active">Editeaza</li>
        </ol>
    </nav>
</div>

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />
    <input asp-for="DepozitId" type="hidden" />

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-info-circle me-2"></i>Informatii Generale
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Nume" class="form-label"></label>
                            <input asp-for="Nume" class="form-control" />
                            <span asp-validation-for="Nume" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="SKU" class="form-label"></label>
                            <input asp-for="SKU" class="form-control" />
                            <span asp-validation-for="SKU" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descriere" class="form-label"></label>
                        <textarea asp-for="Descriere" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descriere" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="UnitateMasura" class="form-label"></label>
                            <select asp-for="UnitateMasura" class="form-select">
                                <option value="buc">Bucati</option>
                                <option value="kg">Kilograme</option>
                                <option value="l">Litri</option>
                                <option value="m">Metri</option>
                                <option value="m2">Metri Patrati</option>
                                <option value="m3">Metri Cubi</option>
                                <option value="set">Seturi</option>
                            </select>
                            <span asp-validation-for="UnitateMasura" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="PretUnitar" class="form-label"></label>
                            <input asp-for="PretUnitar" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="PretUnitar" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Nota:</strong> Cantitatea se modifica prin tranzactii (Intrari/Iesiri/Transferuri).
                        Cantitatea curenta: <strong>@Model.CantitateCurenta @Model.UnitateMasura</strong>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <i class="fas fa-map-marker-alt me-2"></i>Localizare in Depozit
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label asp-for="Zona" class="form-label"></label>
                            <select asp-for="Zona" class="form-select">
                                <option value="A">Zona A</option>
                                <option value="B">Zona B</option>
                                <option value="C">Zona C</option>
                                <option value="D">Zona D</option>
                            </select>
                            <span asp-validation-for="Zona" class="text-danger small"></span>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label asp-for="Etaj" class="form-label"></label>
                            <input asp-for="Etaj" class="form-control" type="number" min="1" max="10" />
                            <span asp-validation-for="Etaj" class="text-danger small"></span>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label asp-for="Raft" class="form-label"></label>
                            <input asp-for="Raft" class="form-control" />
                            <span asp-validation-for="Raft" class="text-danger small"></span>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label asp-for="Pozitie" class="form-label"></label>
                            <input asp-for="Pozitie" class="form-control" />
                            <span asp-validation-for="Pozitie" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-box me-2"></i>Informatii Stoc
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <small class="text-muted">Cantitate Curenta:</small>
                        <div class="h4 text-primary mb-0">
                            <strong>@Model.CantitateCurenta</strong> @Model.UnitateMasura
                        </div>
                    </div>
                    <hr>
                    <div class="mb-2">
                        <small class="text-muted">Valoare Totala:</small>
                        <div class="h5 text-success mb-0">
                            <strong>@((Model.CantitateCurenta * Model.PretUnitar).ToString("N2"))</strong> RON
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Salveaza Modificari
                        </button>
                        <a href="/Marfa" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Inapoi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}