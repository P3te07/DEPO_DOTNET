@model Proiect_ASPDOTNET.Models.ViewModels.MuncitorDashboardViewModel

@{
    ViewData["Title"] = "Dashboard Muncitor";
}

<div class="mb-4">
    <h2><i class="fas fa-user-hard-hat me-2"></i>Bine ai venit, @Model.User.NumeComplet!</h2>
    <p class="text-muted">Dashboard Muncitor</p>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Sarcini Azi</h6>
                        <h2 class="mb-0">@Model.SarciniAzi.Count</h2>
                    </div>
                    <i class="fas fa-tasks fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Finalizate Azi</h6>
                        <h2 class="mb-0">@Model.SarciniFinalizateAstazi</h2>
                    </div>
                    <i class="fas fa-check-circle fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Puncte Reward</h6>
                        <h2 class="mb-0">@Model.PuncteRewardTotal</h2>
                    </div>
                    <i class="fas fa-trophy fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Today's Tasks -->
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-calendar-day me-2"></i>Sarcini de Azi
    </div>
    <div class="card-body">
        @if (Model.SarciniAzi.Any())
        {
            <div class="list-group">
                @foreach (var sarcina in Model.SarciniAzi)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h5 class="mb-1">
                                    @sarcina.Titlu
                                    @if (sarcina.Prioritate == Proiect_ASPDOTNET.Models.Entities.PrioritateSarcina.Ridicata)
                                    {
                                        <span class="badge bg-danger ms-2">Prioritate Ridicata</span>
                                    }
                                    else if (sarcina.Prioritate == Proiect_ASPDOTNET.Models.Entities.PrioritateSarcina.Medie)
                                    {
                                        <span class="badge bg-warning ms-2">Prioritate Medie</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info ms-2">Prioritate Scazuta</span>
                                    }
                                </h5>
                                <p class="mb-1">@sarcina.Descriere</p>
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>Termen: @sarcina.DataLimita.ToString("HH:mm")
                                </small>
                                <small class="text-success ms-3">
                                    <i class="fas fa-star me-1"></i>@sarcina.PuncteReward puncte
                                </small>
                            </div>
                            <div>
                                <button class="btn btn-success btn-sm" onclick="finalizareSarcina(@sarcina.Id)">
                                    <i class="fas fa-check me-1"></i>Finalizeaza
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h5>Toate sarcinile au fost finalizate!</h5>
                <p class="text-muted">Felicitari! Nu ai sarcini ramase pentru azi.</p>
            </div>
        }
    </div>
</div>

<!-- Upcoming Tasks -->
@if (Model.SarciniViitoare.Any())
{
    <div class="card">
        <div class="card-header">
            <i class="fas fa-calendar-alt me-2"></i>Sarcini Viitoare
        </div>
        <div class="card-body">
            <div class="list-group">
                @foreach (var sarcina in Model.SarciniViitoare)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">@sarcina.Titlu</h6>
                            <small>@sarcina.DataLimita.ToString("dd.MM.yyyy")</small>
                        </div>
                        <p class="mb-1 small">@sarcina.Descriere</p>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Rewards Progress -->
<div class="card mt-4">
    <div class="card-header">
        <i class="fas fa-award me-2"></i>Sistem Rewards
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="mb-3">
                    <i class="fas fa-medal fa-3x text-bronze"></i>
                    <p class="mb-0 mt-2"><strong>Bronze</strong></p>
                    <small class="text-muted">0-100 puncte</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <i class="fas fa-medal fa-3x text-muted"></i>
                    <p class="mb-0 mt-2"><strong>Silver</strong></p>
                    <small class="text-muted">101-250 puncte</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <i class="fas fa-medal fa-3x text-warning"></i>
                    <p class="mb-0 mt-2"><strong>Gold</strong></p>
                    <small class="text-muted">251-500 puncte</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <i class="fas fa-crown fa-3x text-primary"></i>
                    <p class="mb-0 mt-2"><strong>Platinum</strong></p>
                    <small class="text-muted">500+ puncte</small>
                </div>
            </div>
        </div>
        <div class="progress" style="height: 25px;">
            @{
                var progress = Math.Min((Model.PuncteRewardTotal / 500.0) * 100, 100);
            }
            <div class="progress-bar bg-warning" role="progressbar" style="width: @progress%"
                 aria-valuenow="@Model.PuncteRewardTotal" aria-valuemin="0" aria-valuemax="500">
                @Model.PuncteRewardTotal / 500
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function finalizareSarcina(sarcinaId) {
            if (confirm('Esti sigur ca ai finalizat aceasta sarcina?')) {
                // Aici ar trebui sa fie un POST catre server
                alert('Functionalitate de finalizare sarcina - va fi implementata');
                location.reload();
            }
        }
    </script>
    <style>
        .text-bronze {
            color: #cd7f32;
        }
    </style>
}