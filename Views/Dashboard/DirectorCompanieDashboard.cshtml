@model Proiect_ASPDOTNET.Models.ViewModels.DirectorCompanieDashboardViewModel

@{
    ViewData["Title"] = "Dashboard Director Companie";
}

<div class="mb-4">
    <h2><i class="fas fa-building me-2"></i>@Model.Companie.Nume</h2>
    <p class="text-muted">Dashboard Director Companie</p>
</div>

<!-- Company Info -->
<div class="row mb-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-info-circle me-2"></i>Informatii Companie
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>CUI:</strong> @Model.Companie.CUI</p>
                        <p><strong>Email:</strong> @Model.Companie.Email</p>
                        <p><strong>Telefon:</strong> @Model.Companie.Telefon</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Adresa:</strong> @Model.Companie.Adresa</p>
                        <p><strong>Data Inregistrare:</strong> @Model.Companie.DataInregistrare.ToString("dd.MM.yyyy")</p>
                        <p><strong>Nr. Depozite:</strong> @Model.Depozite.Count</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <h6 class="card-title">Valoare Totala</h6>
                <h2>@Model.ValoareTotala.ToString("N2") RON</h2>
            </div>
        </div>
        <div class="card text-white bg-success mt-3">
            <div class="card-body text-center">
                <h6 class="card-title">Total Tranzactii</h6>
                <h2>@Model.TotalTranzactii</h2>
            </div>
        </div>
    </div>
</div>

<!-- Map with Warehouses -->
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-map-marked-alt me-2"></i>Harta Depozite
    </div>
    <div class="card-body">
        <div id="map" style="height: 400px; background-color: #e9ecef; border-radius: 8px;">
            <div class="d-flex align-items-center justify-content-center h-100">
                <div class="text-center">
                    <i class="fas fa-map fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Harta depozitelor<br>(Integrare Google Maps sau Leaflet)</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Warehouses Statistics -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-warehouse me-2"></i>Statistici Depozite
    </div>
    <div class="card-body">
        @if (Model.Depozite.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Depozit</th>
                            <th>Adresa</th>
                            <th>Nr. Marfuri</th>
                            <th>Nr. Tranzactii</th>
                            <th>Valoare</th>
                            <th>Actiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dep in Model.Depozite)
                        {
                            <tr>
                                <td>
                                    <strong>@dep.Depozit.Nume</strong><br>
                                    <small class="text-muted">@dep.Depozit.DepozitId</small>
                                </td>
                                <td>@dep.Depozit.Adresa</td>
                                <td>
                                    <span class="badge bg-info">@dep.NumarMarfuri</span>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@dep.NumarTranzactii</span>
                                </td>
                                <td>
                                    <strong>@dep.ValoareDepozit.ToString("N2") RON</strong>
                                </td>
                                <td>
                                    <a href="/Depozit/Details/@dep.Depozit.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> Detalii
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted mb-0">Nu exista depozite inregistrate.</p>
        }
    </div>
</div>