@model Proiect_ASPDOTNET.Models.ViewModels.SuperAdminDashboardViewModel

@{
    ViewData["Title"] = "Dashboard SuperAdmin";
}

<div class="mb-4">
    <h2><i class="fas fa-chart-line me-2"></i>Dashboard SuperAdmin</h2>
    <p class="text-muted">Privire de ansamblu asupra sistemului</p>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Companii Active</h6>
                        <h2 class="mb-0">@Model.TotalCompanii</h2>
                    </div>
                    <i class="fas fa-building fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Depozite Active</h6>
                        <h2 class="mb-0">@Model.TotalDepozite</h2>
                    </div>
                    <i class="fas fa-warehouse fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Utilizatori</h6>
                        <h2 class="mb-0">@Model.TotalUtilizatori</h2>
                    </div>
                    <i class="fas fa-users fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Tranzactii Totale</h6>
                        <h2 class="mb-0">@Model.TotalTranzactii</h2>
                    </div>
                    <i class="fas fa-exchange-alt fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Growth Chart -->
<div class="row mb-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-chart-area me-2"></i>Crestere Companii (Ultimele 12 Luni)
            </div>
            <div class="card-body">
                <canvas id="companiesChart" height="100"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-tasks me-2"></i>Actiuni Rapide
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Companie/Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Adauga Companie
                    </a>
                    <a href="/Depozit/Create" class="btn btn-success">
                        <i class="fas fa-warehouse me-2"></i>Adauga Depozit
                    </a>
                    <a href="/User/Create" class="btn btn-info">
                        <i class="fas fa-user-plus me-2"></i>Adauga Utilizator
                    </a>
                    <a href="/Rapoarte" class="btn btn-warning">
                        <i class="fas fa-file-alt me-2"></i>Vezi Rapoarte
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Companies -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-building me-2"></i>Companii Recente
    </div>
    <div class="card-body">
        @if (Model.CompaniiRecente.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID Companie</th>
                            <th>Nume</th>
                            <th>CUI</th>
                            <th>Email</th>
                            <th>Data Inregistrare</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var companie in Model.CompaniiRecente)
                        {
                            <tr>
                                <td><code>@companie.CompanieId</code></td>
                                <td>@companie.Nume</td>
                                <td>@companie.CUI</td>
                                <td>@companie.Email</td>
                                <td>@companie.DataInregistrare.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (companie.Active)
                                    {
                                        <span class="badge bg-success">Activa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactiva</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted mb-0">Nu exista companii inregistrate.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Chart data from server
        var chartData = @Html.Raw(Json.Serialize(Model.CrestereCompanii));

        var ctx = document.getElementById('companiesChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: chartData.map(d => d.luna),
                datasets: [{
                    label: 'Numar Companii Noi',
                    data: chartData.map(d => d.numarCompanii),
                    backgroundColor: 'rgba(52, 152, 219, 0.2)',
                    borderColor: 'rgba(52, 152, 219, 1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });
    </script>
}