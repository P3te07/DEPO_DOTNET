@model Proiect_ASPDOTNET.Models.ViewModels.CompanieViewModel

@{
    ViewData["Title"] = "Adauga Companie";
}

<div class="mb-4">
    <h2><i class="fas fa-plus-circle me-2"></i>Adauga Companie Noua</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Companie">Companii</a></li>
            <li class="breadcrumb-item active">Adauga Companie</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-info-circle me-2"></i>Informatii Companie
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nume" class="form-label"></label>
                            <input asp-for="Nume" class="form-control" placeholder="Ex: SC Transport SRL" />
                            <span asp-validation-for="Nume" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="CUI" class="form-label"></label>
                            <input asp-for="CUI" class="form-control" placeholder="Ex: RO12345678" />
                            <span asp-validation-for="CUI" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Adresa" class="form-label"></label>
                        <input asp-for="Adresa" class="form-control" placeholder="Str. Exemplu nr. 10, Bucuresti" />
                        <span asp-validation-for="Adresa" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefon" class="form-label"></label>
                            <input asp-for="Telefon" class="form-control" placeholder="0721234567" />
                            <span asp-validation-for="Telefon" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="contact@companie.ro" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Companie" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Inapoi
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Salveaza Companie
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-info-circle me-2"></i>Informatii</h5>
                <p class="small mb-2"><strong>ID Companie:</strong> Va fi generat automat la salvare</p>
                <p class="small mb-2"><strong>Format ID:</strong> CMP[Data][Cod]</p>
                <p class="small mb-0"><strong>Exemplu:</strong> CMP20250215ABC123</p>
                <hr>
                <p class="small text-muted mb-0">
                    <i class="fas fa-lightbulb me-2"></i>
                    Dupa crearea companiei, vei putea adauga depozite si utilizatori asociati acesteia.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}