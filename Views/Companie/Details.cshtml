@model Proiect_ASPDOTNET.Models.Entities.Companie

@{
    ViewData["Title"] = "Detalii Companie";
}

<div class="mb-4">
    <h2><i class="fas fa-building me-2"></i>@Model.Nume</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Companie">Companii</a></li>
            <li class="breadcrumb-item active">Detalii</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-info-circle me-2"></i>Informatii Companie</span>
                <a href="/Companie/Edit/@Model.Id" class="btn btn-sm btn-warning">
                    <i class="fas fa-edit me-1"></i>Editeaza
                </a>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">ID Companie:</div>
                    <div class="col-md-8"><code>@Model.CompanieId</code></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Nume Companie:</div>
                    <div class="col-md-8"><strong>@Model.Nume</strong></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">CUI:</div>
                    <div class="col-md-8">@Model.CUI</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Adresa:</div>
                    <div class="col-md-8">@Model.Adresa</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Telefon:</div>
                    <div class="col-md-8">@Model.Telefon</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Email:</div>
                    <div class="col-md-8">@Model.Email</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Data Inregistrare:</div>
                    <div class="col-md-8">@Model.DataInregistrare.ToString("dd.MM.yyyy HH:mm")</div>
                </div>
                <div class="row">
                    <div class="col-md-4 text-muted">Status:</div>
                    <div class="col-md-8">
                        @if (Model.Active)
                        {
                            <span class="badge bg-success">Activa</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactiva</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Depozite -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-warehouse me-2"></i>Depozite (@(Model.Depozite?.Count ?? 0))</span>
                <a href="/Depozit/Create" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus me-1"></i>Adauga Depozit
                </a>
            </div>
            <div class="card-body">
                @if (Model.Depozite?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nume</th>
                                    <th>Adresa</th>
                                    <th>Status</th>
                                    <th>Actiuni</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var depozit in Model.Depozite)
                                {
                                    <tr>
                                        <td><code>@depozit.DepozitId</code></td>
                                        <td>@depozit.Nume</td>
                                        <td>@depozit.Adresa</td>
                                        <td>
                                            @if (depozit.Active)
                                            {
                                                <span class="badge bg-success">Activ</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactiv</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Depozit/Details/@depozit.Id" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Nu exista depozite asociate acestei companii.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-chart-pie me-2"></i>Statistici Rapide
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Depozite:</span>
                        <strong>@(Model.Depozite?.Count ?? 0)</strong>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Utilizatori:</span>
                        <strong>@(Model.Utilizatori?.Count ?? 0)</strong>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <i class="fas fa-cog me-2"></i>Actiuni
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Companie/Edit/@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Editeaza
                    </a>
                    <a href="/Depozit/Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Adauga Depozit
                    </a>
                    <a href="/Companie" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Inapoi
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>