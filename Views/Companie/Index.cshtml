@model IEnumerable<Proiect_ASPDOTNET.Models.Entities.Companie>

@{
    ViewData["Title"] = "Companii";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-building me-2"></i>Companii</h2>
        <p class="text-muted mb-0">Gestionare companii din sistem</p>
    </div>
    <a href="/Companie/Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Adauga Companie
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID Companie</th>
                            <th>Nume</th>
                            <th>CUI</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Depozite</th>
                            <th>Data Inregistrare</th>
                            <th>Status</th>
                            <th>Actiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var companie in Model)
                        {
                            <tr>
                                <td><code>@companie.CompanieId</code></td>
                                <td><strong>@companie.Nume</strong></td>
                                <td>@companie.CUI</td>
                                <td>@companie.Email</td>
                                <td>@companie.Telefon</td>
                                <td>
                                    <span class="badge bg-info">@companie.Depozite?.Count ?? 0</span>
                                </td>
                                <td>@companie.DataInregistrare.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (companie.Active)
                                    {
                                        <span class="badge bg-success">Activa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactiva</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/Companie/Details/@companie.Id" class="btn btn-sm btn-outline-info" title="Detalii">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/Companie/Edit/@companie.Id" class="btn btn-sm btn-outline-warning" title="Editeaza">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button onclick="stergeCompanie(@companie.Id, '@companie.Nume')" class="btn btn-sm btn-outline-danger" title="Sterge">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-building fa-4x text-muted mb-3"></i>
                <h5>Nu exista companii inregistrate</h5>
                <p class="text-muted">Adauga prima companie pentru a incepe.</p>
                <a href="/Companie/Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Adauga Companie
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function stergeCompanie(id, nume) {
            if (confirm('Esti sigur ca vrei sa stergi compania "' + nume + '"?')) {
                $.ajax({
                    url: '/Companie/Delete/' + id,
                    type: 'POST',
                    success: function(result) {
                        if (result.success) {
                            alert(result.message);
                            location.reload();
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function() {
                        alert('A aparut o eroare la stergerea companiei.');
                    }
                });
            }
        }
    </script>
}